<Window x:Class="RecipeApp.DisplayRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Display Recipe" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select a Recipe:"/>
            <ComboBox Name="RecipeComboBox" SelectionChanged="RecipeComboBox_SelectionChanged" Margin="0 0 0 10"/>
            <TextBlock Text="Ingredients:"/>
            <ListBox Name="IngredientsListBox" Height="100" Margin="0 0 0 10"/>
            <TextBlock Text="Steps:"/>
            <ListBox Name="StepsListBox" Height="100" Margin="0 0 0 10"/>
            <TextBlock Name="TotalCaloriesTextBlock" Text="Total Calories: 0" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
