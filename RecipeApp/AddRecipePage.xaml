<Page x:Class="RecipeApp.AddRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Recipe">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Recipe Name:"/>
            <TextBox x:Name="RecipeNameTextBox" Margin="0 0 0 10"/>

            <TextBlock Text="Ingredients:"/>
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="Ingredient Name:"/>
                <TextBox x:Name="IngredientNameTextBox"/>
            </StackPanel>
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="Quantity:"/>
                <TextBox x:Name="QuantityTextBox"/>
            </StackPanel>
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="Unit of Measure:"/>
                <TextBox x:Name="UnitOfMeasureTextBox"/>
            </StackPanel>
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="Calories:"/>
                <TextBox x:Name="CaloriesTextBox"/>
            </StackPanel>

            <ComboBox x:Name="FoodGroupsComboBox" Margin="0 0 0 10">
                <ComboBoxItem>Fruits</ComboBoxItem>
                <ComboBoxItem>Vegetables</ComboBoxItem>
                <ComboBoxItem>Grains</ComboBoxItem>
                <ComboBoxItem>Protein</ComboBoxItem>
                <ComboBoxItem>Dairy</ComboBoxItem>
                <!-- Add more food groups as needed -->
            </ComboBox>

            <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="0 10 0 0"/>

            <ListBox x:Name="IngredientsListBox" Height="100" Margin="0 0 0 10"/>

            <TextBlock Text="Steps:"/>
            <TextBox x:Name="StepTextBox" Margin="0 0 0 10"/>
            <Button Content="Add Step" Click="AddStep_Click"/>

            <ListBox x:Name="StepsListBox" Height="100" Margin="0 0 0 10"/>

            <Button Content="Save Recipe" Click="SaveRecipe_Click" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Page>
