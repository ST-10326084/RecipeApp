<Page x:Class="RecipeApp.AddRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Recipe">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Recipe Name:"/>
            <TextBox Name="RecipeNameTextBox" Margin="0 0 0 10"/>

            <TextBlock Text="Ingredients:"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="0 0 0 10"/>
            <ListBox Name="IngredientsListBox" Height="100" Margin="0 0 0 10"/>

            <TextBlock Text="Steps:"/>
            <Button Content="Add Step" Click="AddStep_Click" Margin="0 0 0 10"/>
            <ListBox Name="StepsListBox" Height="100" Margin="0 0 0 10"/>

            <Button Content="Save Recipe" Click="SaveRecipe_Click" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Page>
