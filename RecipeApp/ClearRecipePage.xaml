<Page x:Class="RecipeApp.ClearRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Clear Recipe"
      Background="WhiteSmoke">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Select a Recipe:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0 0 10 0"/>
            <ComboBox Name="RecipeComboBox" Margin="0 0 20 0" Padding="5"/>

            <Button Content="Clear Recipe" Click="ClearRecipe_Click" Padding="10" Background="Black" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
