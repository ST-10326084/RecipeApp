<Page x:Class="RecipeApp.ScaleRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Scale Recipe"
      Background="WhiteSmoke">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Select a Recipe:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0 0 10 0"/>
            <ComboBox Name="RecipeComboBox" 
                      Margin="0 0 20 0" 
                      Padding="5"/>

            <TextBlock Text="Scale Factor:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0 0 10 0"/>
            <TextBox Name="ScaleFactorTextBox" 
                     Margin="0 0 20 0" 
                     Padding="5"
                     BorderBrush="Black"/>

            <Button Content="Scale Recipe" 
                    Click="ScaleRecipe_Click" 
                    Padding="10" 
                    Background="Black" 
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
