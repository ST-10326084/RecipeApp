<Page x:Class="RecipeApp.ScaleRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Scale Recipe">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select a Recipe:"/>
            <ComboBox Name="RecipeComboBox" Margin="0 0 0 10"/>
            <TextBlock Text="Scale Factor:"/>
            <TextBox Name="ScaleFactorTextBox" Margin="0 0 0 10"/>
            <Button Content="Scale Recipe" Click="ScaleRecipe_Click"/>
        </StackPanel>
    </Grid>
</Page>
