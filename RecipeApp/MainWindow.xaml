<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecipeApp" Height="1200" Width="1080"
        Background="WhiteSmoke">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Width="880">
            <Button Content="Add Recipe" Click="AddRecipe_Click" Width="200" Margin="10" Padding="10" Background="Black" Foreground="White" BorderBrush="White"/>
            <Button Content="Display Recipe" Click="DisplayRecipe_Click" Width="200" Margin="10" Padding="10" Background="Black" Foreground="White"/>
            <Button Content="Clear Recipe" Click="ClearRecipe_Click" Width="200" Margin="10" Padding="10" Background="Black" Foreground="White"/>
            <Button Content="Scale Recipe" Click="ScaleRecipe_Click" Width="200" Margin="10" Padding="10" Background="Black" Foreground="White"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Margin="20"/>
    </Grid>
</Window>