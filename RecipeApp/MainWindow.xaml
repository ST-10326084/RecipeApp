<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecipeApp" Height="350" Width="525">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Add Recipe" Click="AddRecipe_Click" Width="200" Margin="10"/>
            <Button Content="Display Recipe" Click="DisplayRecipe_Click" Width="200" Margin="10"/>
            <Button Content="Scale Recipe" Click="ScaleRecipe_Click" Width="200" Margin="10"/>
            <Button Content="Clear Recipe" Click="ClearRecipe_Click" Width="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
